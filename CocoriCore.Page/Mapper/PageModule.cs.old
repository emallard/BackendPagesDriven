        public PageModuleOn<TPageQuery> AsModel()
        {
            var mapping3 = new PageMapping3();
            mapping3.Init<TQuery, TResponse, TResponse>((q, r) => r);
            module.Mappings3.Add(mapping3);
            return on;
        }
